# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=saas_db

# Database Connection Pool Settings (Production-ready defaults)
# Total max connections: DB_POOL_SIZE + DB_MAX_OVERFLOW = 50
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=true

# Database URL (optional override - if not set, constructed from above)
# Example for tests: DATABASE_URL=sqlite+aiosqlite:///./test.db
DATABASE_URL=

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT / Authentication
JWT_SECRET=changeme-in-production-use-strong-secret
ACCESS_TOKEN_TTL_SECONDS=900
REFRESH_TOKEN_TTL_SECONDS=604800

# Token Cleanup (Background Task)
REFRESH_TOKEN_CLEANUP_INTERVAL_SECONDS=86400
REFRESH_TOKEN_PURGE_KEEP_REVOKED_SECONDS=604800

# Cache Configuration
TENANT_CACHE_TTL_SECONDS=3600

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@example.com
FRONTEND_URL=http://localhost:3000

# Application Configuration (Docker Compose)
APP_PORT=8081
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Optional: pgAdmin Configuration (docker-compose --profile admin up)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

